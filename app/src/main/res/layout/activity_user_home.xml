<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".User_home">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Vivid_sky_blue"
            android:text="View nearby workshop and send request"
            app:cornerRadius="14dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button9"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Vivid_sky_blue"
            android:text="view request status"
            app:cornerRadius="14dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button10"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Vivid_sky_blue"
            android:text="track mechanic"
            app:cornerRadius="14dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button11"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Vivid_sky_blue"
            android:text="Buy products from workshop"
            app:cornerRadius="14dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button12"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Vivid_sky_blue"
            android:text="send rating about workshop"
            app:cornerRadius="14dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button13"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Vivid_sky_blue"
            android:text="send complaint and view reply"
            app:cornerRadius="14dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button14"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Vivid_sky_blue"
            android:text="send feedback"
            app:cornerRadius="14dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button15"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="logout"
            app:cornerRadius="14dp" />
    </TableRow>
</LinearLayout>